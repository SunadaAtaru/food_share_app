<%# オプション1: エラーメッセージ表示付き %>
<div class="container">  <%# containerを追加するとより安定します %>
 <h1 class="text-center mb-4">パスワードリセット</h1>  <%# 見出しを追加 %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>
        <%= render 'shared/error_messages' if @user&.errors.any? %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "パスワードリセット", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>