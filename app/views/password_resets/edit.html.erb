<% provide(:title, 'Reset password') %>

<div class="container">
  <h1 class="text-center mb-5 mt-5 py-2">パスワードをリセットする</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @user,
                    url: password_reset_path(params[:id]),
                    local: true) do |f| %>
        <%# <%= render 'shared/error_messages', user: @user %> 
        <%= render 'shared/error_messages', object: @user %>
        <%= hidden_field_tag :email, @user.email %>
        
        <%= f.label :password, "新しいパスワード" %>
        <div class="text-center">
          <%= f.password_field :password, class: 'form-control mb-4' %>
        </div>
        
        <%= f.label :password_confirmation, "確認用パスワード" %>
        <div class="text-center">
          <%= f.password_field :password_confirmation, class: 'form-control mb-4' %>
          <%= f.submit "パスワードを更新", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>