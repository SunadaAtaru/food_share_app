<!-- app/views/shared/_error_messages.html.erb -->
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if user&.errors&.any? %>
  <div class="alert alert-danger">
    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>