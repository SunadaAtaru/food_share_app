<%# app/views/layouts/_header.html.erb %>
<header>
  <nav class="navbar navbar-expand-lg navbar-light"><!-- bg-lightを削除 -->
    <div class="container">
      <%= link_to "FoodShareApp", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "プロフィール", user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "ログイン", login_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "サインアップ", signup_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>