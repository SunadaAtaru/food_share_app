<div class="container">
  <% provide(:title, 'All users') %>
   <div class="row justify-content-center">
     <div class="col-md-8">
       <h1 class="mb-4">All Users</h1>
        <ul class="users list-unstyled">
         <% @users.each do |user| %>
          <%= render 'user', user: user %> <!-- パーシャルを呼び出し、ユーザー情報を表示 -->
         <% end %>
        </ul>
      <%= will_paginate @users %> <!-- ページネーションの表示 -->
    </div>
  </div>
</div>
