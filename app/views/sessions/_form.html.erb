<%# app/views/sessions/_form.html.erb %>
<%= form_with(scope: :session, url: login_path) do |form| %>
 <%# <%= render 'shared/error_messages', user: @user %> 
  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control", required: true %>
    <div class="invalid-feedback">
      メールアドレスを入力してください
    </div>
  </div>

  <div class="mb-3">
    <div class="d-flex justify-content-between align-items-center">
      <%= form.label :password, class: "form-label" %>
      <%= link_to "(パスワードを忘れた場合)", new_password_reset_path, 
          class: "text-muted small ms-2",
          aria: { label: "パスワードリセットページへ" } %>
    </div>
    <%= form.password_field :password, class: "form-control", required: true %>
    <div class="invalid-feedback">
      パスワードを入力してください
    </div>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= form.check_box :remember_me, class: "form-check-input" %>
      <%= form.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%= form.submit "ログイン", class: "btn btn-primary" %>
    <% if signup_path.present? %>
      <%= link_to "アカウントを作成", signup_path, class: "text-muted small" %>
    <% end %>
  </div>
<% end %>

